@model IEnumerable<DoAnLTWeb.Models.Product>

@{
    ViewBag.Title = "GetListLoaiSP";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<h2>GetListLoaiSP</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_Loai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price_Sell)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soluong)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_Loai)
        </td>
        <td><img src="@item.Hinh" alt="hinh thumbnail" width="100px" height="100px" /></td>
        <td>
            @Html.DisplayFor(modelItem => item.Price_Sell)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soluong)
        </td>
        
    </tr>
}

</table>
